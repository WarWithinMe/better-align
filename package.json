{
    "name": "better-align",
    "displayName": "Better Align",
    "description": "Align code without selecting them first.",
    "version": "1.1.0",
    "icon": "images/icon.png",
    "repository": "https://github.com/WarWithinMe/better-align",
    "publisher": "wwm",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onCommand:wwm.aligncode"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "wwm.aligncode",
                "title": "Align"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Alignment configuration",
            "properties": {
                "alignment.operatorPadding": {
                    "type": "string",
                    "enum": [
                        "left",
                        "right"
                    ],
                    "default": "right",
                    "description": "Control where to insert space to align different length operators (e.g. aligning = += *= ...)"
                },
                "alignment.surroundSpace": {
                    "type": "object",
                    "default": {
                        "colon": [
                            0,
                            1
                        ],
                        "assignment": [
                            1,
                            1
                        ],
                        "arrow":[
                            1,
                            1
                        ],
                        "comment": 2
                    },
                    "description": "Specify how many spaces to insert around the operator."
                },
                "alignment.indentBase": {
                    "type": "string",
                    "enum": [
                        "firstline",
                        "activeline"
                    ],
                    "default": "firstline",
                    "description": "Control if we will use the indentation of the active line or the first line of the alignment range."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
